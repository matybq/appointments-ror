<%= form_with(model: patient) do |form| %>
  <% if patient.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
        <% patient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container d-flex justify-content-center align-items-center vh-85">
  <div class="card text-center">
    <div class="card-body">

      <br>
      <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name %>
      </div>
      <br>
      <div>
        <%= form.label :sex, style: "display: block" %>
        <%= form.select :sex, ['masculino', 'femenino'], {}, { class: 'form-control' } %>
      </div>
      <br>
      <div>
        <%= form.label :dob, "Date of Birth", style: "display: block" %>
        <%= form.date_field :dob %>
      </div>
      <br>
      <div>
        <%= form.label :email, style: "display: block" %>
        <%= form.text_field :email %>
      </div>
      <br>
      <div>
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>
